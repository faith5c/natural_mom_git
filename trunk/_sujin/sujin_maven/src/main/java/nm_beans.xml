<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

<!-- DataSource -->
	<bean id="ds" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:XE"/>
		<property name="username" value="NMDB"/>
		<property name="password" value="123456"/>
	</bean>
	
<!-- DAO(noticeSvc) -->
	<bean id="noticeDaoOra" class="naturalmom.data.dao.impl.NoticeDaoOraImpl">
		<property name="dataSource">
			<ref local="ds"/>
		</property>
	</bean>	
	
	<bean id="noticeReDaoOra" class="naturalmom.data.dao.impl.NoticeReDaoOraImpl">
		<property name="dataSource">
			<ref local="ds"/>
		</property>
	</bean>
	
	<bean id="vNoticeDaoOra" class="naturalmom.data.dao.impl.VNoticeDaoOraImpl">
		<property name="dataSource">
			<ref local="ds"/>
		</property>
	</bean>

<!-- DAO(orderListSvc) -->
	
	<bean id="orderDaoOra" class="naturalmom.data.dao.impl.OrderDaoOraImpl">
		<property name="dataSource">
			<ref local="ds"/>
		</property>
	</bean>
	
	<bean id="productOrderDaoOra" class="naturalmom.data.dao.impl.ProductOrderDaoOraImpl">
		<property name="dataSource">
			<ref local="ds"/>
		</property>
	</bean>
	
	<bean id="vOrderListDaoOra" class="naturalmom.data.dao.impl.VOrderListDaoOraImpl">
		<property name="dataSource">
			<ref local="ds"/>
		</property>
	</bean>

	<bean id="vOrderManagerDaoOra" class="naturalmom.data.dao.impl.VOrderManagerDaoOraImpl">
		<property name="dataSource">
			<ref local="ds"/>
		</property>
	</bean>
	
	
<!-- 		
	<bean id="saleStatementDaoOra" class="naturalmom.data.dao.impl.SaleStatementOraDaoImpl">
		<property name="dataSource">
			<ref local="ds"/>
		</property>
	</bean>
	-->

<!-- SVC -->
	<bean id="menuSvc" class="naturalmom.ui.svc.MenuConSvc">
		<property name="noticeSvc">
			<ref local="noticeSvc" />
		</property>
		<property name="orderSvc">
			<ref local="orderSvc" />
		</property>
		<property name="orderManagerSvc">
			<ref local="orderManagerSvc" />
		</property>
	</bean>


	<bean id="noticeSvc" class="naturalmom.ui.svc.NoticeConSvc">
		<property name="vNoticeDaoOra">
			<ref local="vNoticeDaoOra" />
		</property>
		<property name="noticeDaoOra">
			<ref local="noticeDaoOra"/>
		</property>
		<property name="noticeReDaoOra">
			<ref local="noticeReDaoOra"/>
		</property>
	</bean>
	
	<bean id="orderSvc" class="naturalmom.ui.svc.OrderConSvc">
		<property name="orderDaoOra">
			<ref local="orderDaoOra" />
		</property>
		<property name="productOrderDaoOra">
			<ref local="productOrderDaoOra" />
		</property>
		<property name="vOrderListDaoOra">
			<ref local="vOrderListDaoOra" />
		</property>
	</bean>
	
	<bean id="orderManagerSvc" class="naturalmom.ui.svc.OrderManagerConSvc">
		<property name="orderDaoOra">
			<ref local="orderDaoOra" />
		</property>
		<property name="productOrderDaoOra">
			<ref local="productOrderDaoOra" />
		</property>
		<property name="vOrderManagerDaoOra">
			<ref local="vOrderManagerDaoOra" />
		</property>
	</bean>
	
<!-- Main -->
	<bean id="main" class="naturalmom.ui.Main">
		<property name="menuSvc">
			<ref local="menuSvc"/>
		</property>
	</bean>	

</beans>
